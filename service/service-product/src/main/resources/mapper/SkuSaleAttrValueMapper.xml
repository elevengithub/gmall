<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.atguigu.gmall.product.mapper.SkuSaleAttrValueMapper">

    <resultMap id="BaseResultMap" type="com.atguigu.gmall.model.product.SkuSaleAttrValue">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="skuId" column="sku_id" jdbcType="BIGINT"/>
            <result property="spuId" column="spu_id" jdbcType="INTEGER"/>
            <result property="saleAttrValueId" column="sale_attr_value_id" jdbcType="BIGINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,sku_id,spu_id,
        sale_attr_value_id
    </sql>
    <select id="getValuesSkuJsonTo" resultType="com.atguigu.gmall.model.to.ValuesSkuJsonTo">
        select a.sku_id,
        group_concat(distinct a.sale_attr_value_id
        order by a.sale_attr_value_id asc separator '|') as value_json
        from
        (select t1.sku_id,t1.sale_attr_value_id
        from sku_sale_attr_value t1
        left join spu_sale_attr_value t2 on t1.spu_id = t2.spu_id and t1.sale_attr_value_id = t2.id
        where t1.spu_id = #{spuId}
        order by t2.base_sale_attr_id,t2.id) a
        group by a.sku_id
    </select>
</mapper>
